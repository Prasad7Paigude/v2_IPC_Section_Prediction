{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ipc_enriched_v1.schema.json",
  "title": "IPC Enriched Dataset v1 Schema",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "law_type",
      "section_number",
      "section_title",
      "full_text",
      "summary",
      "keywords",
      "offence_type"
    ],
    "properties": {
      "law_type": {
        "type": "string",
        "const": "IPC"
      },
      "section_number": {
        "type": "string",
        "pattern": "^[0-9]+[A-Z]*$"
      },
      "section_title": {
        "type": "string",
        "minLength": 5,
        "pattern": "^.*\\S.*$"
      },
      "full_text": {
        "anyOf": [
          {
            "const": "REPEALED"
          },
          {
            "type": "string",
            "minLength": 10,
            "pattern": "^.*\\S.*$"
          }
        ]
      },
      "summary": {
        "type": "string",
        "minLength": 50
      },
      "keywords": {
        "type": "array",
        "minItems": 5,
        "maxItems": 8,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "minLength": 3,
          "pattern": "^.*\\S.*$"
        }
      },
      "offence_type": {
        "type": "string",
        "enum": [
          "Property Crime",
          "Violent Crime",
          "Fraud / Cheating",
          "Sexual Offence",
          "Public Servant Offence",
          "Abetment",
          "General Exception",
          "Punishment",
          "Other"
        ]
      }
    }
  }
}
